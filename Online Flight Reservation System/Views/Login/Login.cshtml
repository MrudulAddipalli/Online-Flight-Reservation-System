@model Online_Flight_Reservation_System.Models.Login

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.UserId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @placeholder = "Enter User Id", @class = "form-control", type = "text", maxlength = "9" ,required = "required" } })
                @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @placeholder = "Enter Password", @class = "form-control", type = "password", maxlength = "9", required = "required" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

                <label id="error" class = "text-danger"></label><br />

                <input type="submit" value="Sign In" class="btn btn-info" />

                <input type="Button" value="Click Here To Register !" class="btn btn-warning" onclick="location.href='@Url.Action("Register", "Register")'" />

            </div>
        </div>

    </div>
}

@if(ViewBag.ErrorMessage!=null)
{
    <script type="text/javascript">
        window.onload = function () {
            $('#error').text("@ViewBag.ErrorMessage");
        }
    </script>
}

